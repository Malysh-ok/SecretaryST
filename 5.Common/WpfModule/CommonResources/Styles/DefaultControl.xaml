<!-- СТИЛЬ КОНТРОЛА ПО УМОЛЧАНИЮ -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    
    <!-- Стиль -->
    <Style x:Key="DefaultControl" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="Segoe UI" />   <!-- По умолчанию - Segoe UI -->
        <Setter Property="FontSize" Value="12"/>
    </Style>
    
</ResourceDictionary>
